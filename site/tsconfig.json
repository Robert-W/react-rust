{
	"include": [
		"src/*"
	],
	"compilerOptions": {
		"target": "esnext",
		"lib": ["es2015", "dom"],
		"jsx": "react",
		"module": "commonjs",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	}
}
